--Fuck all Skids
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Window = Library.CreateLib("Hotel Elephant Money Giver", "Midnight")
local Tab = Window:NewTab("Game")
local Section = Tab:NewSection("Money Giver (need to press enter in the textboxes)")

local playerName = ""
local amount = 0

Section:NewTextBox("Player Username", "Enter the player's Username", function(value)
    playerName = value
end)

Section:NewTextBox("Amount", "Enter the amount of money", function(value)
    amount = tonumber(value)
end)

Section:NewButton("Give Money", "Gives the specified player the specified amount of money", function()
    local Players = game:GetService("Players")
    local player = Players:FindFirstChild(playerName)
    
    if player then
        local args = {
            [1] = false,
            [2] = amount,
            [3] = "Cash",
            [4] = player
        }

        game:GetService("ReplicatedStorage").MoneyRequest:FireServer(unpack(args))
    else
        print("Player not found")
    end
end)

Section:NewButton("Give Everyone Money", "Gives everyone the specified amount of money", function()
    local Players = game:GetService("Players")
    
    for _, player in pairs(Players:GetPlayers()) do
        local args = {
            [1] = false,
            [2] = amount,
            [3] = "Cash",
            [4] = player
        }

        game:GetService("ReplicatedStorage").MoneyRequest:FireServer(unpack(args))
    end
end)

Section:NewButton("Remove Money", "Removes the specified amount of money from the specified player", function()
    local Players = game:GetService("Players")
    local player = Players:FindFirstChild(playerName)
    
    if player then
        local args = {
            [1] = false,
            [2] = -amount,
            [3] = "Cash",
            [4] = player
        }

        game:GetService("ReplicatedStorage").MoneyRequest:FireServer(unpack(args))
    else
        print("Player not found")
    end
end)

Section:NewButton("Remove Everyone Money", "Removes the specified amount of money from everyone", function()
    local Players = game:GetService("Players")
    
    for _, player in pairs(Players:GetPlayers()) do
        local args = {
            [1] = false,
            [2] = -amount,
            [3] = "Cash",
            [4] = player
        }

        game:GetService("ReplicatedStorage").MoneyRequest:FireServer(unpack(args))
    end
end)
